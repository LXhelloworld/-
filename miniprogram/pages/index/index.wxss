/* miniprogram/pages/index/index.wxss */
.contain{
  width: 100%;
  background-color: rgb(241, 241, 241);
}
.pro-item{
  background-color: rgb(255, 255, 255);
  margin: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-radius: 3%;
  padding: 15rpx;
}
.pro-item image{
  width: 100%;
  border-radius: 3%;
  border: 0.5rpx rgb(241, 21, 21) solid;
}
.item-name{
  color: rgb(31, 31, 31);
  font-size: 30rpx;
}
.item-intro{
  color: gray;
  font-size: 25rpx;
  margin-top: 10rpx;
}

.item-footer{
  display: flex;
  justify-content: space-between;
  color: rgb(31, 31, 31);
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  align-items: center;
}
.item-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: rgb(31, 31, 31);
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
}
